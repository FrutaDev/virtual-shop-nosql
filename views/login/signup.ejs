<%- include("../includes/head") %>
<link rel="stylesheet" href="/css/login/create-account.css">
    </head>

    <body>
        <%- include("../includes/navigation") %>
            <main class="main-content">
                <div class="home-container">
                    <h1>Crear usuario</h1>
                    <form class="login-form" action="/signup" method="POST">
                        <label for="name">Nombre</label>
                        <input class="login-input" type="text" name="name" placeholder="nombre" id="name" value="<% if (name) { %><%= name %><% } %>">
                        <label for="lastname">Apellido</label>
                        <input class="login-input" type="text" name="lastname" placeholder="apellido" id="lastname" value="<% if (lastname) { %><%= lastname%><% } %>">
                        <label for="email">Correo electrónico</label>
                        <input class="login-input" type="text" name="email" placeholder="correo electrónico" id="email" value="<% if (email) { %><%=email%><% } %>">
                        <label for="password">Contraseña</label>
                        <input class="login-input" type="password" name="password" placeholder="contraseña" id="password">
                        <label for="confirm-password">Confirmar contraseña</label>
                        <input class="login-input" type="password" name="confirmPassword" placeholder="confirmar contraseña" id="confirmPassword">
                        <p>Ya tienes una cuenta? <a class="login-link" href="/login">inicia Sesión</a></p>
                        <% if (errors.length > 0) { %>
                            <p class="error"><%= errors[0].msg %></p>
                        <% } %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="login-button" type="submit">Crear usuario</button>
                    </form>
                </div>
            </main>
            <%- include("../includes/end") %>